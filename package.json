{
  "name": "llm-adapter",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "llm-coordinator": "./dist/llm_coordinator.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch llm_coordinator.ts",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --forceExit",
    "test:all": "LLM_LIVE=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --forceExit",
    "test:live": "tsx tests/live/run-live.ts",
    "test:live:anthropic": "tsx tests/live/run-live.ts anthropic",
    "test:live:openai": "tsx tests/live/run-live.ts openai-responses",
    "test:live:openrouter": "tsx tests/live/run-live.ts openrouter",
    "test:live:google": "tsx tests/live/run-live.ts google",
    "test:live:embeddings": "tsx tests/live/run-live.ts --testPathPattern=15-embeddings",
    "test:live:vector": "tsx tests/live/run-live.ts --testPathPattern=16-vector-store",
    "start": "node dist/llm_coordinator.js",
    "sandbox:cli": "tsx tests/sandbox/index.ts"
  },
  "dependencies": {
    "@google/genai": "^1.27.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "ajv": "^8.12.0",
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "eventsource-parser": "^1.1.1",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "openai": "^6.7.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
